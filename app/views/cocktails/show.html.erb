<nav class ="navbar mb-0">
  <div class = "nav-btn nav-home">
    <%= link_to "HOME", cocktails_path%>
  </div>
      <div class= "nav-title">
      <h1>Cocktail Tones</h1>
    </div>
    <div class="nav-btn nav-delete">
      <%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" } %>
  </div>
</nav>

<div class="show-container mx-5 my-5">
  <div class="show-cocktail-container">

  <div class="cocktail-display-card">
    <div class="cocktail-pic">
      <% if @cocktail.photo.attached?%>
        <%= cl_image_tag @cocktail.photo.key%>
      <% else %>
        <%= image_tag ("glass.jpg") %>
      <% end %>
    </div>
      <div class="cocktail-text">

      <h1 class='pb-3'> <%= @cocktail.name.capitalize  %></h1>

          <% @cocktail.doses.each do |dose| %>
            <p><%= "#{dose.ingredient.name} - #{dose.description}" %>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient?" } do %>
              <i class="far fa-trash-alt bin-btn pl-2"></i>
            <% end %>
            </p>
          <% end %>
          <br>
          <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail.id), class: 'new-button dose-btn' %>
      </div>
    </div>
  </div>
</div>


